{% layout "layout.liquid" %} {% block content %}
<div>
  <article>
    <h2>
      {{ productL.name }} - {% if readyToEat == true %} Ready to Eat {% else %} Not
      Ready to Eat {% endif %}
    </h2>
    <h3>{{ productL.color }}</h3>
    <a href="/store/{{ productL}}/edit"><button>Edit</button></a>
    <form action="/store/{{ productL._id }}?_method=DELETE" method="POST">
      <input type="submit" value="Delete" />
    </form>
    <a href="/store/"><button>Back to Main</button></a>
  </article>
</div>
{% endblock %}